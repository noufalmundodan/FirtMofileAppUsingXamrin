<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobApp.Views.ErrorPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Something went wrong. Please contact your administrator.!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" BackgroundColor="Green" FontSize="Body" />
            <Button  Text="Return to the login page" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>