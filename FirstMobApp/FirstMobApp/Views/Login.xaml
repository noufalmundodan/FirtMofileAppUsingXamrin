<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMobApp.Views.Login">
    <ContentPage.Content>
        <StackLayout Padding="25">            
            <Label  Text="Username:" />
            <Entry x:Name="EntryUserName" Placeholder="Enter Username"  />
            <Label Text="Password:" />
            <Entry x:Name="EntryPassword" Placeholder="Please enter Password" IsPassword="True" />
            <Button Text="Login" Clicked="onButtonClicked" />

            <Label x:Name="EntryErrorMessage" FormattedText="red"  IsVisible="False"  />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>